{
  "mcpServers": {
    "code-health": {
      "command": "npx",
      "args": ["butter-code-health@latest", "code-health-mcp"],
      "_comment": "Configuration examples below:",
      
      "_example_1_basic": {
        "_description": "Basic configuration (manual dashboard start via tools)",
        "command": "npx",
        "args": ["butter-code-health@latest", "code-health-mcp"]
      },
      
      "_example_2_auto_start": {
        "_description": "Auto-start dashboard when MCP server starts",
        "command": "npx",
        "args": ["butter-code-health@latest", "code-health-mcp"],
        "env": {
          "CODE_HEALTH_AUTO_START": "true",
          "CODE_HEALTH_PORT": "3020"
        }
      },
      
      "_example_3_custom_port": {
        "_description": "Custom port without auto-start",
        "command": "npx",
        "args": ["butter-code-health@latest", "code-health-mcp"],
        "env": {
          "CODE_HEALTH_PORT": "8080"
        }
      }
    }
  }
}